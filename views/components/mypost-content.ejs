<div class="post-content">
    <div class="ui grid">
        <div class="four wide column"></div>
        <div class="eight wide column">
            <div class="ui segment">
                <h3>
                    <a href="/posts/<%= post._id %>"><%= post.title %></a>
                    <% if(!user || favouritePostsId.indexOf(post._id.toString()) === -1){ %>
                        <a href="/posts/<%= post._id %>/favour"><i class="black empty heart icon link"></i></a>
                    <% }else{ %>
                        <a href="/posts/<%= post._id %>/favour"><i class="red heart icon link" style="float:right"></i></a>
                    <% } %>
                </h3>
                <pre><%- post.content %></pre>
                <div>
                    <span class="tag"><%= post.created_at %></span>
                    <span class="tag right">
                        <span>收藏(<%= post.favouritesCount %>)</span>
                        <span>浏览(<%= post.pv || 0 %>)</span>
                        <span>留言(<%= post.commentsCount || 0 %>)</span>

                        <% if(user && post.author._id && user._id.toString() === post.author._id.toString()){ %>
                            <div class="ui inline dropdown">
                                <div class="text"></div>
                                <i class="dropdown icon"></i>
                                <div class="menu">
                                    <div class="item"><a href="/posts/<%= post._id %>/edit">编辑</a></div>
                                    <% if(post.hide === 0){ %>
                                        <div class="item"><a href="/posts/<%= post._id %>/hide">隐藏</a></div>
                                    <% }else{ %>
                                        <div class="item"><a href="/posts/<%= post._id %>/hide">显示</a></div>
                                    <% } %>
                                    <div class="item"><a href="/posts/<%= post._id %>/remove">删除</a></div>
                                </div>
                            </div>
                        <% } %>

                    </span>
                </div>
            </div>
        </div>
    </div>
</div>